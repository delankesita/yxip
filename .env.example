# 通用
APP_NAME=lanrenshu
APP_ENV=production
APP_DOMAIN=lanrenshu.us.kg
LOG_LEVEL=INFO

# Database（Postgres / Neon / Supabase）
# 任选其一，建议只配置一个生产数据库连接字符串
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DB_NAME
POSTGRES_URL=${DATABASE_URL}
# Supabase 相关（如果使用 Supabase）
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Cloudflare R2
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=
# 公网访问域名（可用 R2 自定义域/CDN 域）
R2_PUBLIC_BASE_URL=
# S3 兼容 Endpoint（例如 https://<accountid>.r2.cloudflarestorage.com）
R2_ENDPOINT=
R2_REGION=auto

# 邮件（Resend）
RESEND_API_KEY=
ALERT_EMAIL_FROM=ops@lanrenshu.us.kg
ALERT_EMAIL_TO=owner@example.com

# Sentry（错误监控）
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0

# 第三方告警（占位）
DINGTALK_WEBHOOK=
DINGTALK_SECRET=
WECOM_WEBHOOK=

# NextAuth（如需在 Web 项目中启用身份认证）
NEXTAUTH_URL=https://lanrenshu.us.kg
NEXTAUTH_SECRET=
# 常见 OAuth Provider 占位
GITHUB_ID=
GITHUB_SECRET=
GOOGLE_ID=
GOOGLE_SECRET=

# Vercel（如需）
VERCEL_PROJECT_ID=
VERCEL_ORG_ID=
